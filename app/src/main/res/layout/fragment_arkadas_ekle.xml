<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:background="@color/logorenk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArkadasEkleFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/butonmavisi"
        app:layout_constraintHeight_percent="0.075"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Sohbet etmek istediğiniz kişiye tıklayınız"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/yazi"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yazi"
         />
</androidx.constraintlayout.widget.ConstraintLayout>