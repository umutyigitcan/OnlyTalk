<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:background="@color/logorenk"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:id="@+id/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:id="@+id/kullaniciadi"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/kullaniciadi"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="15dp"
        android:text="Hesap Ayarlarını Değiştir"
        android:background="@drawable/ayarshape"
        android:textColor="@color/yesil"
        android:id="@+id/ayardegistir"/>
   <Button
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/ayardegistir"
       android:background="@drawable/ayarshape"
       app:layout_constraintHeight_percent="0.09"
       app:layout_constraintWidth_percent="0.6"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="20dp"
       android:text="Hesabını Sil"
       android:textSize="15dp"
       android:paddingStart="10dp"
       android:paddingEnd="10dp"
       android:textColor="@color/yesil"
       android:id="@+id/hesapsil"
       />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hesapsil"
        android:textColor="@color/yesil"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Çıkış Yap"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cikisyap"
        android:background="@drawable/ayarshape"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.09"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        />




























</androidx.constraintlayout.widget.ConstraintLayout>